{% extends 'base.html.twig' %}

{% block title %}Login in{% endblock %}

{% block body %}
    <link rel="stylesheet" href="css/styles.css">

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    
        <form action="{{ path('app_login') }}" method="post" style=max-width:100%;margin:0 auto;">
            <h2>Login</h2>
            <label for="username">Username:</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}"></br>
            
            <label for="password">Password:</label>
            <input type="password" id="password" name="_password"></br>

            {# If you want to control the URL the user is redirected to on success
            <input type="hidden" name="_target_path" value="/login"> #}

            <button type="submit" class="btnBlue">Login</button>
        </form>
   

{% endblock %}
