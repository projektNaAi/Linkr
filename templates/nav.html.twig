{% block header %}
    <style>
        .navbar{

        }
        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #333;
        }

        li {
            float: left;
        }

        li a {
            display: block;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }

        li a:hover {
            background-color: #0288D1;
        }
    </style>
    <div class="navbar">
        <ul>
            <li><a href="{{ path('main') }}">Home</a></li>
            {% if app.user %}
                <li><a href="{{ path('app_linklist') }}">Link list</a></li>
                <li><a href="{{ path('app_manageaccount') }}">Manage account</a></li>
                <li><a href="{{ path('app_generate') }}">Shorten URL</a></li>

            {% endif %}

            {% if app.user %}
                <li style="float:right"><a href="{{ path('app_logout') }}">Log out</a></li>
                <li style="float:right"><a>Logged in as: {{ app.user.username }}</a></li>
            {% else %}
                <li style="float:right"><a href="{{ path('app_register') }}">Register</a></li>
                <li style="float:right"><a href="{{ path('app_login') }}">Login</a></li>
            {% endif %}

        </ul>
    </div>
{% endblock %}
